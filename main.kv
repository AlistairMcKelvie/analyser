            text: '15'
            group: 'select'
            allow_no_boxNo: False
            on_press: painter.boxNo = 15

    BoxLayout:
        width: root.width
        height: root.height * 0.1
        Button:
            text: 'Select Area'
            on_release: 
                print app.imageFile
                root.readRectangle(app.imageFile)
        Button:
            text: 'Go to graph'
            on_release: app.goto_graph()

<GraphScreen>:
    BoxLayout:
        size: root.size
        orientation: 'vertical'
        MyGraph:
            id: graph
        Button:
            id: analyer_btn
            size_hint_y: None
            height: root.height * 0.25
            text: 'Go to analyser'
            on_release: app.goto_analyser() 

<FileChooserScreen>:
    BoxLayout:
        size: root.size
        orientation: 'vertical'
        FileChooserListView:
            id: filechooser
            #path: '/Users/alistairmckelvie/Projects/analyzer'
            #path: '/mnt/sdcard/DCIM'
            path: 'D:/Projects/analyser'
        Button:
            size_hint_y: 0.1
            text: 'Load'
            on_release: app.goto_analyser(filechooser.selection[0])
