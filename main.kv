#
<AnalyserScreen>:
    Painter:
        id: painter
        height: root.height * 0.75
        y: root.height * 0.25
        width: root.width
    Label:
        id: rgbLabel
        color: 0.5, 0.5, 0.5, 1
        size: self.texture_size
        y: painter.y
        font_size: root.height * 0.05
    BoxLayout:
        width: root.width
        height: root.height * 0.25
        Button:
            text: 'Select Area'
            on_release: 
                print app.imageFile
                root.getColor(app.imageFile)
        Button:
            text: 'Go to graph'
            on_release: app.goto_graph()

<GraphScreen>:
    BoxLayout:
        size: root.size
        orientation: 'vertical'
        MyGraph:
            id: graph
        Button:
            id: analyer_btn
            size_hint_y: None
            height: root.height * 0.25
            text: 'Go to analyser'
            on_release: app.goto_analyser() 

<FileChooserScreen>:
    BoxLayout:
        size: root.size
        orientation: 'vertical'
        FileChooserListView:
            id: filechooser
            #path: '/Users/alistairmckelvie/Projects/analyzer'
            path: '/mnt/sdcard/DCIM'
        Button:
            size_hint_y: 0.1
            text: 'Load'
            on_release: app.goto_analyser(filechooser.selection[0])
