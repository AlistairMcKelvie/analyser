<AnalyserScreen>:
    Painter:
        id: painter
        height: root.height * 0.75
        y: root.height * 0.25
        width: root.width
    Label:
        id: rgbLabel
        color: 0.5, 0.5, 0.5, 1
        size: self.texture_size
        y: painter.y
        font_size: root.height * 0.05

    BoxLayout:
        width: root.width
        y: root.height * 0.2
        height: root.height * 0.05
        ToggleButton:
            text: '1'
            group: 'select'
            state: 'down'
            allow_no_boxNo: False
            on_press: painter.boxNo = 1
        ToggleButton:
            text: '2'
            group: 'select'
            allow_no_boxNo: False
            on_press: painter.boxNo = 2
        ToggleButton:
            text: '3'
            group: 'select'
            allow_no_boxNo: False
            on_press: painter.boxNo = 3
        ToggleButton:
            text: '4'
