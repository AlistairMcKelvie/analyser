# 
BoxLayout:
    orientation: 'vertical'
    Image:
        id: image
        size_hint_y: None
        height: root.height * 0.75
        canvas:
            Color:
                rgba: 0, 0, 1, 1
        source: 'colors.png'
        allow_stretch: True
        keep_ratio: True
        Painter:
            size_hint_y: None
            size_hint_x: None
            size: self.parent.size
            pos: self.parent.pos
            id: painter

    BoxLayout:
        size_hint_y: None
        height: root.height * 0.05
        ToggleButton:
            text: '1'
            group: 'select'
            state: 'down'
            allow_no_selection: False
            on_press: painter.selection = 1
        ToggleButton:
            text: '2'
            group: 'select'
            allow_no_selection: False
            on_press: painter.selection = 2
