<CalibResultsScreen>
    orientation: 'vertical'
    BoxLayout:
        size_hint_y: 0.075
        Label:
            text: 'Spot No.'
        Label:
            text: 'Concentration'
        Label:
            text: 'Color Value'
        Label:
            text: 'Blank Value'
        Label:
            text: u'\u03b1'   
    ScrollView:
        size_hint_y: 0.4
        BoxLayout:
            size_hint_y: None
            orientation: 'vertical'
            id: valuesTable
    CalibGraph:
        id: calibGraph
    Label:
        size_hint_y: 0.1
        id: calibEqn
    BoxLayout:
        size_hint_y: 0.1
        Button:
            text: 'Get more calibration values'
            on_release:
                app.targetReaderScreen = 'calib'
                app.goto_image_menu()
        Button:
            text: 'Get Sample'
            on_release:
                if app.calib is not None:app.targetReaderScreen = 'sample';app.goto_image_menu()

<SampleResultsScreen>
    orientation: 'vertical'
    BoxLayout:
        size_hint_y: 0.075
        Label:
            text: 'Spot No.'
        Label:
            text: 'Color Value'
        Label:
            text: u'\u03b1' 
    ScrollView:
        size_hint_y: 0.8
        BoxLayout:
            size_hint_y: None
            orientation: 'vertical'
            id: valuesTable
    Label:
        size_hint_y: 0.1
        id: calcConc
    BoxLayout:
        size_hint_y: 0.1
    Button:
        text: 'Get Sample'
        on_release: app.goto_image_menu()
    Button:
        text: 'Get Send Email'
        on_release: 
            app.sendEmail()
            app.goto_main_menu()
    
