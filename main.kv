            text: '12'
            group: 'select'
            allow_no_boxNo: False
            on_press: painter.boxNo = 12
        ToggleButton:
            text: '13'
            group: 'select'
            allow_no_boxNo: False
            on_press: painter.boxNo = 13
        ToggleButton:
            text: '14'
